# Stage 1: Build
FROM golang:1.21-alpine AS builder

RUN apk add --no-cache git ca-certificates tzdata

WORKDIR /src

COPY go.mod go.sum ./
RUN go mod download

COPY . .

ARG VERSION=dev
ARG COMMIT=none
ARG BUILD_DATE=unknown

RUN CGO_ENABLED=0 go build \
    -ldflags "-s -w -X main.version=${VERSION} -X main.commit=${COMMIT} -X main.buildDate=${BUILD_DATE}" \
    -o /bin/aisac-server ./cmd/server

# Stage 2: Runtime
FROM alpine:3.19

RUN apk add --no-cache ca-certificates tzdata \
    && addgroup -S aisac && adduser -S aisac -G aisac

COPY --from=builder /bin/aisac-server /usr/local/bin/aisac-server

RUN mkdir -p /etc/aisac/certs \
    && chown -R aisac:aisac /etc/aisac

USER aisac

EXPOSE 8443

HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
    CMD wget -qO- http://localhost:8443/api/v1/health || exit 1

ENTRYPOINT ["aisac-server"]
CMD ["-a", ":8443"]
